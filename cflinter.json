{
    "global": {
        "outputFormat": "text",
        "showRuleNames": true,
        "exitOnError": false,
        "maxIssues": 0
    },
    "rules": {
        "AVOID_USING_CFDUMP_TAG": {
            "enabled": true
        },
        "AVOID_USING_CFABORT_TAG": {
            "enabled": true
        },
        "VAR_INVALID_NAME": {
            "enabled": true,
            "parameters": {
                "case": "camelCase",
                "minLength": 3,
                "maxLength": 20,
                "maxWords": 4
            }
        },
        "MISSING_VAR": {
            "enabled": true
        },
        "CFQUERYPARAM_REQ": {
            "enabled": true
        },
        "EXCESSIVE_FUNCTION_LENGTH": {
            "enabled": true,
            "parameters": {
                "length": 100
            }
        },
        "FUNCTION_HINT_MISSING": {
            "enabled": false
        },
        "GLOBAL_VAR": {
            "enabled": true
        },
        "AVOID_USING_CREATEOBJECT": {
            "enabled": true
        }
    }
}
