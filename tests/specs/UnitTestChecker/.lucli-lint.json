{
    "global": {
        "outputFormat": "text",
        "showRuleNames": true,
        "exitOnError": false,
        "maxIssues": 0
    },
    "rules": {
        "SQL_CHECK": {    
            "enabled": true,
            "parameters": {
                "extensions": "cfm,cfc,cfml"
            }
        },
        "UNIT_TEST_CHECK": {
            "enabled": true,
            "parameters": {
                "unit_test_regex": "(com/myapp/.*/)(.*)\\.(?:cfc|cfm)$",
                "source_folder": "artefacts/components/",
                "test_folder": "artefacts/unit_tests/testcases/"
            }
        }
    }
}
